<div class="container">
    {{#each data}}
    <div class="page-header">
        <h1>{{title}}</h1>
    </div>

    <div class="row">
        <div class="col-md-7">
            <pre class="prettyprint linenums lang-html">{{content}}</pre>
            {{#if less}}
            <pre class="prettyprint linenums lang-js">{{less}}</pre>
            {{/if}}
        </div>
        <div class="col-md-5" id="code{{@index}}">
            <dialog style="color: #f00">{{{css}}}{{{content}}}</dialog>
        </div>
    </div>
    {{/each}}
</div>
<div style="height: 140px"></div>

<script>
    var com = document.querySelectorAll('.col-md-5');
    for(var i = 0;i<com.length;i++){
        var html = com[i].querySelector('dialog').innerHTML;
        var shadow = com[i].createShadowRoot();
        shadow.innerHTML = html;
    }
</script>